<section ng-controller="contentBuilderCtrl">
    <form novalidate class="css-form ng-pristine ng-valid ng-valid-required" id="addServiceSchema" name="serviceSchemaForm" ng-submit="serviceSchemaForm.$valid && updateService()">
        <div class="modal-header">
            <h3 class="modal-title">Update Service Schema of [ {{config.name}} ]</h3>
        </div>
        <div class="modal-body">
            <div ng-include="'modules/contentBuilder/directives/add-s1.tmpl'"></div>
            <div ng-include="'modules/contentBuilder/directives/add-s2.tmpl'"></div>
            <div ng-include="'modules/contentBuilder/directives/add-s3.tmpl'"></div>
            <div ng-include="'modules/contentBuilder/directives/add-s4.tmpl'"></div>
        </div>
        <div class="modal-footer">
            <input ng-show="generateSchema" type="submit" class="btn btn-sm btn-primary" value="Update Service Schema"/>
            <a href="" ng-confirm-click="Are you sure you want to cancel? (All the data collected by the wizard will be lost)" ng-click="purgeSchema()" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</section>