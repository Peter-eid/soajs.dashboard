<div ng-controller="mainMembersCtrl as mainCtrl">
    <tabset id="membersSection">
        <tab heading="Members">
            <section ng-controller="membersCtrl as gridCtrl" class="membersCtrl">
                <span ng-if="members.access.adminUser.addUser">
                    <a href="" ng-click="members.addMember()" class="btn btn-primary">Add New Member</a><br/><br/>
                </span>
                <nglist></nglist>
            </section>
        </tab>
        <tab ng-show="access.adminGroup.list" heading="Groups">
            <section ng-controller="groupsCtrl as gridCtrl">
                <span ng-if="groups.access.adminGroup.add">
                    <a href="" ng-click="groups.addGroup()" class="btn btn-primary">Add New Group</a><br/><br/>
                </span>
                <nglist></nglist>
            </section>
        </tab>
    </tabset>
</div>