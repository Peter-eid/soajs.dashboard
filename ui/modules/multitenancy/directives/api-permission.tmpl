<div class="body listApis" ng-class="{openApis: currentApplication.aclFill[service.name].include===true && currentApplication.aclFill[service.name].collapse===false }">
    <div>
        <span>
            <input ng-disabled="service.forceRestricted" ng-click="applyRestriction(service)" type="checkbox" name="apisRestrictPermission_{{service.name}}" ng-model="currentApplication.aclFill[service.name].apisRestrictPermission" ng-checked="currentApplication.aclFill[service.name].apisRestrictPermission===true || service.forceRestricted" value="restricted" />
        </span>
        <span><b>Restrict Access to Selected Apis</b></span>
        <fieldset ng-repeat="(grp, val) in service.fixList">
            <legend>{{grp}}</legend>
            <div class="clearfix apiListing-container">
                <div class="" ng-repeat="myApi in val.apis| orderBy:'groupMain' " ng-class-even="'even'" ng-class-odd="'odd'" ng-class="{'first': $first, 'last': $last, selected:api.selected}">
                    <div class="apiListing clearfix">
                        <div class="apiLabel">
                            <input ng-click="checkForGroupDefault(service,grp,val,myApi)" ng-disabled="(val.defaultApi && myApi.groupMain!==true && (currentApplication.aclFill[service.name].apis[val.defaultApi].include!==true))" type="checkbox" value="true" ng-model="currentApplication.aclFill[service.name].apis[myApi.v].include" ng-show="currentApplication.aclFill[service.name].apisRestrictPermission" /> {{myApi.l}}
                        </div>
                        <div class="apiAccess" ng-hide="(currentApplication.aclFill[service.name].apisRestrictPermission && (currentApplication.aclFill[service.name].apis[myApi.v].include!==true))">
                            <div style="float:left">
                                <span style="padding-right: 15px;">
                                    <input ng-model="currentApplication.aclFill[service.name].apis[myApi.v].accessType" value="clear" type="radio" name="{{service.name}}_{{grp}}_{{$index}}_accessType" />
                                    <em>inherit from service</em>
                                </span>
                                <span>
                                    <input ng-model="currentApplication.aclFill[service.name].apis[myApi.v].accessType" value="public" type="radio"/> public
                                </span>
                                <span>
                                    <input ng-model="currentApplication.aclFill[service.name].apis[myApi.v].accessType" value="private" type="radio"/> private
                                </span>
                                <span>
                                    <input ng-model="currentApplication.aclFill[service.name].apis[myApi.v].accessType" value="groups" type="radio" ng-checked="currentApplication.aclFill[service.name].apis[myApi.v].accessType==='groups'" /> Groups
                                </span>
                            </div>
                            <div class="grpsListingScroll" ng-class="{smallGrpsListingScroll: allGroups.length<3}"
                                 ng-show="currentApplication.aclFill[service.name].apis[myApi.v].accessType==='groups'">
                                <ul class="grpsListing">
                                    <li ng-repeat="code in allGroups" ng-class-even="'evenLi'" ng-class-odd="'oddLi'">
                                        <input ng-model="currentApplication.aclFill[service.name].apis[myApi.v].grpCodes[code]" ng-checked="currentApplication.aclFill[service.name].apis[myApi.v]['access'].indexOf(code)>-1" type="checkbox" value="{{code}}" />
                                        <span>{{code}}</span>
                                    </li>
                                </ul>
                                <span ng-repeat="code in allGroups"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>