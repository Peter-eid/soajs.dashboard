<section ng-controller="servicesCtrl" ng-show="grid.rows">

    <div class="entryBoxes">
        <div ng-repeat="service in grid.rows" class="entryBox">
            <div class="header">{{service['name']}}<span>[ {{service['port']}} ]</span></div>
            <div class="body">
                <div class="description"><b>External&nbsp;Key&nbsp;Required</b>:&nbsp;{{service['extKeyRequired']}}</div>
                <ul class="blueListing">
                    <li class="blueLi blueLiBox" ng-repeat="api in service.apis">
                        <b>Label</b>:&nbsp;{{api.l}}<br/>
                        <b>Group</b>:&nbsp;{{api.group}}<br/>
                        <span ng-if="api.groupMain"><b>Group Default</b>:&nbsp;{{api.groupMain}}<br/></span>
                        <b>Route</b>:<br />{{api.v}}<br/>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>