<section ng-controller="ContentManagementCtrl">
    <script type="text/ng-template" id="infoBox.html">
        <div ng-include="'/modules/DEV/contentManagement/directives/infoBox.tmpl'"></div>
    </script>
    <tabset>
        <div ng-if="services.length >0" class="entryBoxes entryBoxesGrid">
            <div ng-repeat="oneService in services" class="dbBox w10" ng-show="hp">
                <div class="head">
                    <h4>{{oneService.name}}</h4>
                        <span class="rightActions">
                            <span class="icon icon-newspaper"></span>
                        </span>
                </div>
                <div class="info">
                    <b>version:</b>&nbsp;{{oneService.v}}<br/><br/>
                    <a href="" ng-click="loadUIModule(oneService)" class="btn btn-primary">Manage Content</a>

                </div>
            </div>

            <div ng-show="!hp">
                <h2>Managing Content of {{selectedService.name}}</h2>
                <a href="" ng-click="goBack()" class="f-right btn btn-primary">Go Back</a>
                <div id="contentGridContainer"><br/><p>Loading Data...</p></div>
            </div>

        </div>

        <div ng-if="services.length === 0">
            <div class="redFlag"> No Content Management Services are running.</div>
            <br/>

            <p ng-if="noCB">Create New Services in <a href="#/content-builder">Content Builder</a></p>
            <p ng-if="!noCB">No Content Management Services are deployed yet. Head to the <a href="#/environments">Environments</a> Section and deploy them.</p>
        </div>
    </tabset>
</section>