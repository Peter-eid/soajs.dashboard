<section ng-controller="ContentManagementCtrl">
    <script type="text/ng-template" id="infoBox.html">
        <div class="modal-header">
            <h3 class="modal-title">{{title}}</h3>
        </div>
        <div class="modal-body">
            <div ng-bind-html="data|object"></div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" ng-click="ok()">OK</button>
        </div>
    </script>
    <tabset>
        <div ng-if="services.length >0" class="entryBoxes entryBoxesGrid">
            <div ng-repeat="oneService in services" class="dbBox w10" ng-show="hp">
                <div class="head">
                    <h4>{{oneService.name}}</h4>
                        <span class="rightActions">
                            <span class="icon icon-newspaper"></span>
                        </span>
                </div>
                <div class="info">
                    <b>version:</b>&nbsp;{{oneService.v}}<br/><br/>
                    <a href="" ng-click="loadUIModule(oneService)" class="btn btn-primary">Manage Content</a>

                </div>
            </div>

            <div ng-show="!hp">
                <h2>Managing Content of {{selectedService.name}}</h2>
                <tabset>
                    <tab heading="{{oneHost.env|uppercase}}" ng-repeat="oneHost in selectedService.schema.hosts" ng-click="populateCMUI(oneHost.env)" active="oneHost.active">
                        <div id="contentGridContainer_{{oneHost.env}}"><br/><p>Loading Data...</p></div>
                    </tab>
                </tabset>
            </div>

        </div>

        <div ng-if="services.length === 0">
            <div class="redFlag"> No Content Management Services where found.</div>
            <br/>

            <p>Create New Service(s) in <a href="#/content-builder">Content Builder</a>.</p>
        </div>
    </tabset>
</section>