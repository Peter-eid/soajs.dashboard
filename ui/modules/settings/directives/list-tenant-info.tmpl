<form id="tenantInfo" novalidate="" class="css-form" name="">
	<div class="body">
		<table width="100%" cellspacing="0" cellpadding="0" border="0">
			<tbody>
				<tr class="form-group ng-scope">
					<td class="ng-scope">
						<label class="ng-binding">Name</label>
						<input type="text" ng-required="true" tooltip="Enter Tenant Name." placeholder="Test Tenant..." ng-model="tenant.name" name="name" class="form-control" required="required"/>
					</td>
				</tr>
				<tr class="form-group ng-scope">
					<td class="ng-scope">
						<label class="ng-binding">Description</label>
						<textarea tooltip="Enter a description explaining the usage of this tenant" placeholder="Testing Tenant, used by developers and does not reach production server..." class="form-control" ng-model="tenant.description" rows="5" name="description" id="iddescription"></textarea>
					</td>
				</tr>
				<tr class="form-group ng-scope" ng-if="access.tenant.oauth.list">
					<td class="ng-scope">
						<label class="ng-binding">{{translation.oAuthSecret[LANG]}}</label>
						<input type="text" tooltip="Enter Tenant oAuth Secret." placeholder="SECRET..." value="My secret phrase" ng-model="tenant.oauth.secret" name="secret" class="form-control"/>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="footer"><br/>
		<input ng-if="access.tenant.update" type="submit" class="btn btn-sm btn-primary" ng-click="saveTenant()" value="Update Tenant"/>
		<input ng-if="access.tenant.oauth.delete" type="submit" class="btn btn-sm btn-danger" ng-click="clearOauth()" value="Delete oAuth Info"/>
	</div>
</form>